{
  "name": "glint-site",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:zh": "ng serve --configuration development-zh",
    "start:prod": "npm run build && firebase emulators:start",
    "build": "npm run update:releases && ng build",
    "build:staging": "npm run update:releases && ng build --configuration staging",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "lint": "ng lint",
    "stage": "npm run build --development staging && firebase deploy -P staging",
    "update:favicons": "env-cmd --no-override --silent node ./scripts/update-favicons.mjs",
    "update:releases": "env-cmd --no-override --silent node ./scripts/update-releases.mjs",
    "i18n": "ng extract-i18n --output-path src/locale"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.0.0",
    "@angular/cdk": "^19.0.0",
    "@angular/common": "^19.0.0",
    "@angular/compiler": "^19.0.0",
    "@angular/core": "^19.0.0",
    "@angular/forms": "^19.0.0",
    "@angular/material": "^19.0.0",
    "@angular/platform-browser": "^19.0.0",
    "@angular/platform-browser-dynamic": "^19.0.0",
    "@angular/router": "^19.0.0",
    "@ngxs/devtools-plugin": "~18.1.6",
    "@ngxs/storage-plugin": "~18.1.6",
    "@ngxs/store": "~18.1.6",
    "lodash-es": "^4.17.21",
    "ngx-markdown": "^19.0.0",
    "rxjs": "~7.5.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.0.1",
    "@angular-eslint/builder": "~18.4.2",
    "@angular-eslint/eslint-plugin": "~18.4.2",
    "@angular-eslint/eslint-plugin-template": "~18.4.2",
    "@angular-eslint/schematics": "~18.4.2",
    "@angular-eslint/template-parser": "~18.4.2",
    "@angular/cli": "^19.0.1",
    "@angular/compiler-cli": "^19.0.0",
    "@angular/localize": "^19.0.0",
    "@types/gtag.js": "^0.0.20",
    "@types/jasmine": "~5.1.4",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.9.3",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "env-cmd": "^10.1.0",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsdoc": "^50.5.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "favicons": "^7.2.0",
    "jasmine-core": "~5.4.0",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "ng-extract-i18n-merge": "^2.13.0",
    "typescript": "~5.6.3",
    "user-agent-data-types": "~0.4.2"
  },
  "overrides": {
    "@angular/core": "$@angular/core"
  }
}