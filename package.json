{
  "name": "glint-site",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:zh": "ng serve --configuration development-zh",
    "build": "npm run update:releases && ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "lint": "ng lint",
    "stage": "npm run build && firebase deploy -P staging",
    "update:favicons": "env-cmd --no-override --silent node ./scripts/update-favicons.mjs",
    "update:releases": "env-cmd --no-override --silent node ./scripts/update-releases.mjs",
    "i18n": "ng extract-i18n --output-path src/locale"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^15.2.4",
    "@angular/cdk": "^15.2.4",
    "@angular/common": "^15.2.4",
    "@angular/compiler": "^15.2.4",
    "@angular/core": "^15.2.4",
    "@angular/forms": "^15.2.4",
    "@angular/material": "^15.2.4",
    "@angular/platform-browser": "^15.2.4",
    "@angular/platform-browser-dynamic": "^15.2.4",
    "@angular/router": "^15.2.4",
    "@ngxs/devtools-plugin": "~3.8.0",
    "@ngxs/storage-plugin": "~3.8.0",
    "@ngxs/store": "~3.8.0",
    "lodash-es": "^4.17.21",
    "ngx-markdown": "^15.1.2",
    "rxjs": "~7.5.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^15.2.4",
    "@angular-eslint/builder": "~15.2.1",
    "@angular-eslint/eslint-plugin": "~15.2.1",
    "@angular-eslint/eslint-plugin-template": "~15.2.1",
    "@angular-eslint/schematics": "~15.2.1",
    "@angular-eslint/template-parser": "~15.2.1",
    "@angular/cli": "^15.2.4",
    "@angular/compiler-cli": "^15.2.4",
    "@angular/localize": "^15.2.4",
    "@types/gtag.js": "^0.0.19",
    "@types/jasmine": "~4.0.3",
    "@types/lodash-es": "^4.17.6",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "env-cmd": "^10.1.0",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsdoc": "^48.2.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "favicons": "^7.1.4",
    "jasmine-core": "~4.0.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.1.0",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "ng-extract-i18n-merge": "^2.7.0",
    "typescript": "~4.8.4",
    "user-agent-data-types": "~0.3.0"
  }
}
